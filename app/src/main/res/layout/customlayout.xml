<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0FFFF">

    <TextView
        android:id="@+id/event_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/event_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_item_name"
        android:paddingLeft="5dp"
        android:textColor="#5F9F9F"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/event_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="177dp"
        android:paddingLeft="5dp"
        android:textColor="#5F9F9F"
        android:textSize="15sp" />


    <ImageButton
        android:id="@+id/event_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="14dp"
        android:src="@android:drawable/ic_menu_delete" />

    <ImageButton
        android:id="@+id/event_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/event_item_delete"
        android:src="@android:drawable/ic_menu_info_details" />


</RelativeLayout>